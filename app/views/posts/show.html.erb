

<div class="post-wrapper row">
	<div class="post">
		<div class="post-head">
			<div class="name">
				Frank Linehan
			</div>
		</div>
		<div class="image center-block">
			<%= image_tag @post.image.url(:medium), class: 'img-responsive center-block' %>
		</div>
		<p class="caption">
			<%= @post.caption %>
		</p>
		<div class="text-center">
			<%= link_to "Cancel", posts_path %>
		</div>
	</div>
</div>